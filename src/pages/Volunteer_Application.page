            <apex:includeScript value="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js" />
            <script type="text/javascript">
                j$ = jQuery.noConflict();
                j$(document).ready(function () {
                            initialize();
                });
                function initialize() {
                    //addEventToHelpLink();
                    addCalYears();
                    addShowHideEventWatchers();
                    j$('.hideRow').closest('tr').hide();
                }

                function addShowHideEventWatchers() {
                }

                function textBoxEnableValidation(theCheckBox, theTextBox) {
                    // No longer needed
                    var textBox = j$("[id*='" + theTextBox + "']");
                    if (j$("[id*='" + theCheckBox + "']").prop('checked')) {
                        textBox.prop("disabled",false);
                    } else {
                        textBox.prop("disabled",true);
                        textBox.val('');
                    }
                }

                function addCalYears() {
                    var select = document.getElementById('calYearPicker');
                    if (!select) return;

                    select.innerHTML = '';
                    var startYear = new Date().getFullYear() - 90;
                    for (var year = startYear; year < startYear + 100; year++) {
                        select.options[select.options.length] = new Option(year, year);
                    }
                }

                var waitThenRedirect = function() {
                    if (!j$(".error").length) {
                         window.setTimeout(function() {
                            window.location.href = "http://girlsrockchicago.org/volunteer/";
                        }, 10000);
                    }
                };

                var saving = function() {
                    j$('[id*="saveButton"]').attr('value', 'Please Wait');
                    j$('[id*="saveButton"]').addClass('btnDisabled');
                }

                function addEventToHelpLink(fieldNames) {
                    j$.each(fieldNames, function (i, fieldName) {
                        j$('#' + fieldName + '-ShowHelp').on('click', function() {
                            j$('#' + fieldName + '-ShowHelp').hide();
                            j$('#' + fieldName + '-HideHelp').show();
                            j$('#' + fieldName + '-Help').show();
                        });
                        j$('#' + fieldName + '-HideHelp').on('click', function() {
                            j$('#' + fieldName + '-ShowHelp').show();
                            j$('#' + fieldName + '-HideHelp').hide();
                            j$('#' + fieldName + '-Help').hide();
                        });
                    });
                }

                function showHideSection(checkBoxId, sectionId) {
                    if (j$("[id*='" + checkBoxId + "']").prop('checked')) {
                        j$("[class*='" + sectionId + "']").show();
                    } else {
                        j$("[class*='" + sectionId + "']").hide();
                    }
                }

                function showHideSectionByPicklistValue(pickListClass, sectionClass, values) {
                    var pickListValue = j$('.' +  pickListClass).val();
                    if (j$.inArray(pickListValue, values) !== -1) {
                        j$('.' +  sectionClass).closest('tr').show();
                    } else {
                        j$('.' +  sectionClass).closest('tr').hide();
                        j$('.' + sectionClass + 'Text').val('');
                    }
                }

            </script>
